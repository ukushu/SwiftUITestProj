"lastWeekI" = "Останній тиждень я: ";

"q01.answer1" = "не відчував себе нещасним.";
"q01.answer2" = "періодично відчував себе нещасним.";
"q01.answer3" = "весь час відчував себе нещасним.";
"q01.answer4" = "весь час відчував себе нестерпно нещасним.";

"q02.answer1" = "думаючи про майбутнє, не відчував себе розчарованим.";
"q02.answer2" = "думаючи про майбутнє, відчував певне розчарування.";
"q02.answer3" = "відчував, що мене нічого хорошого в майбутньому не чекає.";
"q02.answer4" = "відчував, що моє майбутнє безнадійне і ніщо не може це виправити.";

"q03.answer1" = "не відчував себе невдахою.";
"q03.answer2" = "відчував, що в мене було невдач більше середнього.";
"q03.answer3" = "відчував, що все моє життя - це ланцюг з невдач.";
"q03.answer4" = "відчував себе абсолютним невдахою.";

"q04.answer1" = "отримував задовлення від життя, як зазвичай.";
"q04.answer2" = "отримував задоволення менше звичайного.";
"q04.answer3" = "не отримував справжнього задоволення від будь-чого, чим займався.";
"q04.answer4" = "ніякого задоволення не отримував в принципі.";

"q05.answer1" = "не відчував себе особливо винуватим в чому-небудь.";
"q05.answer2" = "досить часто відчував себе винним.";
"q05.answer3" = "переважну кількість часу відчував себе винним.";
"q05.answer4" = "постійно відчував себе винним.";

"q06.answer1" = "не задумувався про можливі покарання.";
"q06.answer2" = "відчував, що можу бути покараним.";
"q06.answer3" = "постійно очікував покарання.";
"q06.answer4" = "постійно мав відчуття, що мене карають.";

"q07.answer1" = "не відчував розчарування в собі.";
"q07.answer2" = "був дещо розчарований в собі.";
"q07.answer3" = "бридкий собі.";
"q07.answer4" = "ненавидів себе.";

"q08.answer1" = "відчував себе не гірше інших.";
"q08.answer2" = "був самокритичний. [Задумувався та визнавав свої слабкості та помилки]";
"q08.answer3" = "весь час винив себе за помилки.";
"q08.answer4" = "відчував себе винуватим буквально у всьому.";

"q09.answer1" = "не мав суіцидальних думок.";
"q09.answer2" = "мав суіцидальні думки. [Втілювати їх не планую]";
"q09.answer3" = "хочу покінчити життя самогубством.";
"q09.answer4" = "покінчу життя самогубством, як тільки це стане можливим.";

"q10.answer1" = "плакав не частіше звичайного";
"q10.answer2" = "плакав більше звичайного";
"q10.answer3" = "весь час плакав.";
"q10.answer4" = "раніше я міг плакати, але тепер, навіть, на це не здатен...";

"q11.answer1" = "був не більш роздтратованим, аніж зазвичай.";
"q11.answer2" = "роздратовувався по всіляким дрібницям.";
"q11.answer3" = "весь час був роздратований.";
"q11.answer4" = "раніше мав на стільки високу роздратованість, що вона перейшла межу і стало буквально все одно.";

"q12.answer1" = "не втратив інтересу до людей.";
"q12.answer2" = "інтерес до людей був менше звичайного.";
"q12.answer3" = "майже повністю втратив інтерес до людей.";
"q12.answer4" = "повністю втратив інтерес до людей.";

"q13.answer1" = "приймав рішення як і зазвичай.";
"q13.answer2" = "відкладував прийняття рішень частіше звичайного.";
"q13.answer3" = "відчував великі складнощі в прийнятті рішень.";
"q13.answer4" = "був не здатен приймати рішення.";

"q14.answer1" = "не відчував, що виглядаю гірше звичайного.";
"q14.answer2" = "був дещо схвильований тим, що виглядаю постарівшим чи непривабливим.";
"q14.answer3" = "відчував, що зміни у зовнішності зробили мене неприваблевим.";
"q14.answer4" = "відчував відразу до себе.";

"q15.answer1" = "був здатен працювати в звичайному режимі.";
"q15.answer2" = "прикладав зусилля, що б почати роботу.";
"q15.answer3" = "прикладав величезні зусилля, що б почати роботу.";
"q15.answer4" = "втратив здатність працювати.";

